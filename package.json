{
  "name": "Hydra",
  "version": "0.0.1",
  "description": "A theme for ghost",
  "url": "http://www.claudiordgz.com",
  "author": {
    "name": "claudiordgz",
    "email": "claudio.rdgz@gmail.com",
    "url": "http://www.claudiordgz.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/claudiordgz/hydra.git"
  },
  "devDependencies": {
    "browserify": "^11.0.0",
    "clean-css": "^3.3.6",
    "coffee-script": "^1.9.3",
    "domready": "0.3.0",
    "hashmark": "^3.0.0",
    "jade": "^1.11.0",
    "minifyify": "^7.0.3",
    "modularscale-sass": "^2.1.1",
    "moment": "^2.10.6",
    "node-bourbon": "^4.2.3",
    "node-sass": "^3.2.0",
    "uglify-js": "^2.4.24"
  },
  "scripts": {
    "clean:js": "rm -f assets/js/main* && rm -rf src/dist/*",
    "clean:css": "rm -f assets/css/bundle*",
    "build:coffee": "coffee -o src/dist/ -c src/theme",
    "build:js:main:debug": "browserify -d src/dist/blog/main.js -o assets/js/main.js",
    "build:js:post:debug": "browserify -d src/dist/post/main.js -o assets/js/main.post.js",
    "build:js:main": "browserify src/dist/blog/main.js | uglifyjs > assets/js/main.js",
    "build:js:post": "browserify src/dist/post/main.js | uglifyjs > assets/js/main.post.js",
    "build:js:debug": "npm run build:js:main:debug && npm run build:js:post:debug/",
    "build:css:theme": "node-sass --include-path=vendor/responsive-modular-scale/stylesheets --include-path=node_modules/modularscale-sass/stylesheets --include-path=node_modules/node-bourbon/node_modules/bourbon/app/assets/stylesheets src/scss/style.scss assets/css/bundle.min.css",
    "minify:css:theme": "cleancss -o assets/css/bundle.min.css assets/css/bundle.min.css",
    "merge:css:theme": "echo '<style>' > partials/css/bundle.hbs && sh -c 'cat assets/css/bundle.min.css >> partials/css/bundle.hbs' && echo '\n</style>' >> partials/css/bundle.hbs",
    "build:css:post:facebook": "node-sass --include-path=node_modules/modularscale-sass/stylesheets --include-path=src/scss/posts/ --include-path=node_modules/node-bourbon/node_modules/bourbon/app/assets/stylesheets src/scss/posts/facebook_share.scss assets/css/posts/facebook_share.css",
    "minify:post:facebook": "cleancss -o assets/css/posts/facebook_share.css assets/css/posts/facebook_share.css",
    "deploy:css:post:facebook": "npm run build:css:post:facebook && npm run minify:post:facebook",
    "build:css:post:unittest": "node-sass --include-path=node_modules/modularscale-sass/stylesheets --include-path=src/scss/posts/ --include-path=node_modules/node-bourbon/node_modules/bourbon/app/assets/stylesheets src/scss/posts/unit_test_post.scss assets/css/posts/unit_test_post.css",
    "minify:post:unittest": "cleancss -o assets/css/posts/unit_test_post.css assets/css/posts/unit_test_post.css",
    "deploy:css:post:unittest": "npm run build:css:post:unittest && npm run minify:post:unittest",
    "deploy:css:theme": "npm run clean:css && npm run build:css:theme && npm run minify:css:theme && npm run merge:css:theme",
    "deploy:css:theme:debug": "npm run clean:css && npm run build:css:theme && npm run merge:css:theme",
    "deploy:css:all": "npm run deploy:css:theme && npm run deploy:css:post:facebook && npm run deploy:css:post:unittest",
    "deploy:js:all": "npm run clean:js && npm run build:coffee && npm run build:js:main && npm run build:js:post",
    "deploy:all": "npm run deploy:css:all && npm run deploy:js:all"
  },
  "license": "MIT",
  "readme": "README.md"
}
