<div id="site-intro" {{#if @blog.cover}} class="left-style covered" style="background-image: url({{@blog.cover}})"{{else}}class="left-style"{{/if}}>
    <div class="intro-wrap">
        <div class="intro-text">
            <div class="welcome-text style1">
                <div class="line1">Explore,</div>
                <div class="line2">Because Why Not?</div>
                <div class="line3">{{@blog.description}}.</div>
            </div>
            <div class="action-list">
                <a class="action-btn highlight go-to-blog" href="#start">
                    Discover My Blog <i class="fa fa-chevron-down"></i>
                </a>
            </div>
        </div>
    </div>
</div>